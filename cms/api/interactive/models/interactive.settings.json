{
  "kind": "collectionType",
  "collectionName": "interactives",
  "info": {
    "name": "interactive",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publicationDate": {
      "type": "datetime",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string",
      "maxLength": 60
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "teaser": {
      "type": "text",
      "maxLength": 200,
      "required": false
    },
    "rectangularImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "squareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "contentLink": {
      "type": "string"
    },
    "implementation": {
      "type": "enumeration",
      "enum": [
        "insert",
        "frame",
        "link"
      ],
      "default": "insert",
      "required": true
    },
    "theme": {
      "collection": "theme",
      "via": "interactives"
    }
  }
}
