{
  "kind": "collectionType",
  "collectionName": "interactives",
  "info": {
    "name": "interactive"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publicationDate": {
      "type": "datetime",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text",
      "required": false
    },
    "teaserImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "contentLink": {
      "type": "string"
    },
    "theme": {
      "collection": "theme",
      "via": "interactives"
    }
  }
}
