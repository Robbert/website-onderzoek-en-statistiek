{
  "kind": "collectionType",
  "collectionName": "themes",
  "info": {
    "name": "Theme",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text",
      "required": false
    },
    "intro": {
      "type": "richtext",
      "required": false
    },
    "rectangularImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "squareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "visualisation": {
      "type": "component",
      "repeatable": false,
      "component": "shared.visualisation"
    },
    "topStory": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives"
      ]
    },
    "featured": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives",
        "shared.collections",
        "shared.datasets"
      ]
    },
    "combiPicture": {
      "type": "component",
      "repeatable": false,
      "component": "shared.combi-picture"
    },
    "email": {
      "type": "string",
      "regex": "[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
    },
    "phoneNumber": {
      "type": "string",
      "regex": "^((\\+|00(\\s|\\s?\\-\\s?)?)31(\\s|\\s?\\-\\s?)?(\\(0\\)[\\-\\s]?)?|0)[1-9]((\\s|\\s?\\-\\s?)?[0-9])((\\s|\\s?-\\s?)?[0-9])((\\s|\\s?-\\s?)?[0-9])\\s?[0-9]\\s?[0-9]\\s?[0-9]\\s?[0-9]\\s?[0-9]$"
    },
    "articles": {
      "via": "theme",
      "collection": "article"
    },
    "publications": {
      "via": "theme",
      "collection": "publication"
    },
    "videos": {
      "via": "theme",
      "collection": "video"
    },
    "collections": {
      "via": "theme",
      "collection": "collection"
    },
    "interactives": {
      "via": "theme",
      "collection": "interactive"
    },
    "datasets": {
      "via": "theme",
      "collection": "dataset"
    }
  }
}
