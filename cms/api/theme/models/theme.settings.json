{
  "kind": "collectionType",
  "collectionName": "themes",
  "info": {
    "name": "Theme",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text",
      "required": false
    },
    "intro": {
      "type": "richtext",
      "required": false
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "teaserImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "features": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.collections",
        "shared.interactives",
        "shared.links"
      ]
    },
    "articles": {
      "via": "theme",
      "collection": "article"
    },
    "publications": {
      "via": "theme",
      "collection": "publication"
    },
    "videos": {
      "via": "theme",
      "collection": "video"
    },
    "collections": {
      "via": "theme",
      "collection": "collection"
    },
    "interactives": {
      "via": "theme",
      "collection": "interactive"
    },
    "datasets": {
      "via": "theme",
      "collection": "dataset"
    }
  }
}
