{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "name": "collection",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text"
    },
    "intro": {
      "type": "richtext"
    },
    "teaserImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "theme": {
      "via": "collections",
      "collection": "theme"
    },
    "featured": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives",
        "shared.datasets"
      ]
    },
    "collectionItems": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives",
        "shared.datasets"
      ]
    },
    "linkList": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives",
        "shared.collections",
        "shared.datasets",
        "shared.links"
      ]
    },
    "email": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "string"
    }
  }
}
