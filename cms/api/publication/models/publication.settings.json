{
  "kind": "collectionType",
  "collectionName": "publications",
  "info": {
    "name": "publication",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publicationDate": {
      "type": "datetime"
    },
    "formatPublicationDate": {
      "type": "enumeration",
      "enum": [
        "DagMaandJaar",
        "MaandJaar",
        "Jaar"
      ],
      "default": "MaandJaar"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string",
      "maxLength": 60
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "author": {
      "type": "string"
    },
    "teaser": {
      "type": "text",
      "maxLength": 200,
      "required": false
    },
    "intro": {
      "type": "text",
      "required": false
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.text",
        "shared.text-with-links",
        "shared.visualisation"
      ]
    },
    "rectangularImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "squareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "file": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "theme": {
      "via": "publications",
      "collection": "theme"
    }
  }
}
