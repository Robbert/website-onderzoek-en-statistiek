{
  "kind": "collectionType",
  "collectionName": "publications",
  "info": {
    "name": "publication",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publicationDate": {
      "type": "datetime"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text",
      "required": false
    },
    "intro": {
      "type": "text",
      "required": false
    },
    "body": {
      "type": "richtext",
      "required": false
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "teaserImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "file": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "publicationDateOnlyYear": {
      "type": "boolean",
      "default": false
    },
    "publicationDateOnlyMonthAndYear": {
      "type": "boolean",
      "default": false
    },
    "publicationSource": {
      "type": "string",
      "default": "Onderzoek en Statistiek"
    },
    "theme": {
      "via": "publications",
      "collection": "theme"
    },
    "related": {
      "type": "component",
      "repeatable": false,
      "component": "shared.related"
    }
  }
}
