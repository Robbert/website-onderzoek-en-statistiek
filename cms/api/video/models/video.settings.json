{
  "kind": "collectionType",
  "collectionName": "videos",
  "info": {
    "name": "video",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publicationDate": {
      "type": "datetime"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "teaser": {
      "type": "text",
      "required": false
    },
    "transcript": {
      "type": "richtext"
    },
    "intro": {
      "type": "text",
      "required": false
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.text",
        "shared.text-with-links",
        "shared.visualisation"
      ]
    },
    "rectangularImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "squareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "videoFile": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "subtitleFile": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "wideVideo": {
      "type": "boolean",
      "default": false
    },
    "subtitleDefault": {
      "type": "boolean",
      "default": false
    },
    "externalVideoSource": {
      "type": "string",
      "regex": "^$|https://"
    },
    "externalEmbedSource": {
      "type": "string",
      "regex": "^$|https://"
    },
    "theme": {
      "via": "videos",
      "collection": "theme"
    }
  }
}
