{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "publicationDate": {
      "type": "datetime",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "teaser": {
      "type": "text",
      "required": true
    },
    "intro": {
      "type": "text",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "teaserImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "theme": {
      "via": "articles",
      "collection": "theme"
    },
    "related": {
      "type": "component",
      "repeatable": false,
      "component": "shared.related"
    }
  }
}
