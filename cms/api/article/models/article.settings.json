{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "publicationDate": {
      "type": "datetime",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortTitle": {
      "type": "string",
      "maxLength": 60
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "teaser": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "intro": {
      "type": "text",
      "required": true
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.text",
        "shared.text-with-links",
        "shared.visualisation"
      ]
    },
    "related": {
      "type": "dynamiczone",
      "components": [
        "shared.articles",
        "shared.publications",
        "shared.videos",
        "shared.interactives",
        "shared.collections"
      ]
    },
    "rectangularImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "squareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "theme": {
      "via": "articles",
      "collection": "theme"
    }
  }
}
